@model BaseModel<int>
@{
    var col = Model.DeletedAt == null ? "6" : "4";
}

@if (Model.Id != 0)
{
	<div class="row">
        <div class="col-md-@col">
			<div class="form-group">
				<label asp-for="CreatedAt"></label>
				<input type="hidden" asp-for="CreatedAt" class="form-control" />
				<time>@Model.CreatedAt</time>
			</div>
		</div>
        <div class="col-md-@col">
			<div class="form-group">
				<label asp-for="UpdatedAt"></label>
				<input type="hidden" asp-for="UpdatedAt" class="form-control" />
				<time>@Model.UpdatedAt</time>
			</div>
		</div>
        @if (Model.DeletedAt != null)
        {
	        <div class="col-md-4">
		        <div class="form-group">
			        <label asp-for="DeletedAt"></label>
                    <input type="hidden" asp-for="DeletedAt" class="form-control" />
                    <time>@Model.DeletedAt</time>
		        </div>
	        </div>
        }
	</div>
}